{
   "tasks": [
      {
         "name": "dotnet-format-example",
         "command": "dotnet",
         "args": [ "dotnet-format", "--include", "${staged}" ],
         "include": [ "**/*.cs", "**/*.vb" ]
      },
      {
         "name": "dotnet-test",
         "group": "prepush",
         "command": "dotnet",
         "args": [ "test", "./Constructorio_NET" ]
      },
      {
         "name": "dotnet-test",
         "group": "coverage",
         "command": "dotnet",
         "args": [ "test", "/p:CollectCoverage=true","/p:CoverletOutputFormat=cobertura", "/p:CoverletOutput=\"../../coverage/\"", "./" ]
      },
      {
         "name": "dotnet-test-report",
         "group": "coverage",
         "command": "dotnet",
         "args": [ "reportgenerator", "/p:CollectCoverage=true","-reports:./coverage/coverage.cobertura.xml", "-targetdir:./coverage/html", "-reporttypes:HTML" ]
      },
      {
         "name": "dotnet-test-open-report",
         "group": "coverage",
         "command": "open",
         "args": [ "./coverage/html/index.html" ]
      }
   ]
}
